{{> messages}}
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form class="form-signin" action="/accounts/reset-password" method="POST" style="width: 100%;">
        <div class="text-center mb-4">
          <h1 class="h3 mb-3 font-weight-normal">Forgot Password</h1>
        </div>
        <h6 class="text-secondary"><small>(<i class="fas fa-star-of-life text-danger"></i>)</small> 代表必填欄位</h6>
        <div class="form-label-group">
          <label for="email">Email <small>(<i class="fas fa-star-of-life text-danger"></i>)</small></label>
          <input type="text" name="email" id="email" class="form-control" placeholder="Email" value="{{email}}" required
            autofocus>
        </div>
        <br />
        <button class="btn btn-outline-primary btn-block" type="submit">Submit</button>
        <a href="/accounts/signin" class="btn btn-outline-danger btn-block">Sign In</a>
        <a href="/accounts/signup" class="btn btn-outline-dark btn-block">Sign Up</a>
        <p class="mt-5 mb-3 text-muted text-center">© 2017-2018</p>
      </form>
    </div>
  </div>
</div>