<header class="header-area transparent-bar sticky-bar showdow">
  <div class="main-header-wrap">
    <div class="container">
      <div class="row">
        <div class="col-xl-3 col-lg-3">
          <div class="logo mt-40">
               <a href="#"><img src="/assets/images/logo/logo.png" alt="logo" width="80px" height="40px"></a>
          </div>
        </div>
        <div class="col-xl-6 col-lg-6">
          <div class="main-menu menu-common-style menu-lh-1 menu-other-style">
            <nav>
              <ul>
                <li><a href="/products/main"><b>MAIN</b> |</a></li>
                <li><a href="/products/shop"><b>SHOP</b> 展示中心</a></li>
                <li><a href="/accounts"><b>ACCOUNTS</b> 會員中心</a></li>
              </ul>
            </nav>
          </div>
        </div>
        <div class="col-xl-3 col-lg-3">
          <div class="header-right-wrap mt-40">
            {{!--------------- shopping cart (large) ---------------}}
            <div class="cart-wrap common-style">
              {{#if barCart}}
                <button class="cart-active">
                  <i class="la la-shopping-cart"></i>
                  <span class="count-style badge badge-info">{{cartItemNum}}</span>
                </button>
              {{else}}
                <button class="cart-active">
                  <i></i>
                </button>
              {{/if}}
              {{!--------------- shopping cart menu (large) ---------------}}
              <div class="shopping-cart-content">
                <div class="shopping-cart-top">
                  <h4>Your Cart 購物車</h4>
                  <a class="cart-close" href="#"><i class="la la-close"></i></a>
                </div>
                <ul>
                  {{!--------------- user account ---------------}}
                  <li class="d-flex justify-content-around">
                    {{#if user.id}}
                    <div class="mt-2">
                      <h2><i class="la la-user text-warning"></i></h2>
                    </div>
                    <div class="mt-3">
                      <h4><a href="/accounts">會員中心</a></h4>
                    </div>
                    <div class="align-self-center">
                      <a href="/accounts/logout" class="btn btn-outline-danger btn-sm">登出</a>
                    </div>
                    {{else}}
                    <div class="mt-2">
                      <h2><i class="la la-user"></i></h2>
                    </div>
                    <div class="mt-3">
                      <h4><a href="/accounts/signin">SIGN IN 登入</a></h4>
                    </div>
                    <div></div>
                    {{/if}}
                  </li>
                  {{#ifCond user.role "admin"}}
                  <li class="d-flex justify-content-around">
                    <div class="mt-2">
                      <h2><i class="la la-gears"></i></h2>
                    </div>
                    <div class="mt-3">
                      <h4><a href="/admin/users">管理員</a></h4>
                    </div>
                    <div></div>
                  </li>
                  {{/ifCond}}
                  {{!--------------- cart items ---------------}}
                  <hr />
                  {{#if cart.items}}
                  {{#each barCart.items}}
                  <li class="single-shopping-cart">
                    <div class="shopping-cart-img">
                      <a href="/products/{{this.id}}"><img alt="" src="{{this.image}}"></a>
                      <div class="item-close">
                        <a href="#"><i class="sli sli-close"></i></a>
                      </div>
                    </div>
                    <div class="shopping-cart-title">
                      <h4><a href="#">{{this.name}}</a></h4>
                      <span>$ {{this.price}}</span>
                    </div>
                    {{!-- <form action="/carts/{{this.CartItem.id}}/delete" method="post" id="delete-item">
                      <div class="shopping-cart-delete">
                        <button type="submit" form="delete-item"><i class="la la-trash"></i></button>
                      </div>
                    </form> --}}
                  </li>
                  {{/each}}
                </ul>
                <div class="shopping-cart-bottom">
                  <div class="shopping-cart-total">
                    <h4>金額 <span class="shop-total">$ {{barTotalPrice}}</span></h4>
                  </div>
                  <div class="shopping-cart-btn btn-hover default-btn text-center">
                    <a class="black-color" href="/carts">前往購物清單</a>
                  </div>
                </div>
                {{/if}}
              </div>
            </div>
          </div>
          <!-- main-search start -->
          <div class="main-search-active">
            <div class="sidebar-search-icon  border">
              <button class="search-close"><span class="la la-close"></span></button>
            </div>
            <div class="sidebar-search-input">
              <form action="/products/shop">
                <div class="form-search">
                  <input id="search" class="input-text" name="keyword" value="{{keyword}}" placeholder="搜尋賣場..."
                    type="search">
                  <button>
                    <i class="la la-search"></i>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{!----------------- header Logo ----------------------}}
  <div class="header-small-mobile">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-6">
          <div class="mobile-logo">
            <a href="/products/main">
              {{!----------------- Logo ----------------------}}
               <a href="#"><img src="/assets/images/logo/logo.png" alt="logo" width="80px" height="40px"></a>
            </a>
          </div>
        </div>
        <div class="col-6">
          <div class="header-right-wrap">
            {{!----------------- Shopping cart (small)----------------------}}
            <div class="cart-wrap common-style ml-30">
             {{#if barCart}}
                <button class="cart-active">
                  <i class="la la-shopping-cart"></i>
                  <span class="count-style badge badge-info">{{cartItemNum}}</span>
                </button>
              {{else}}
                <button class="cart-active">
                  <i></i>
                </button>
              {{/if}}

              {{!----------------- cart menu ----------------------}}
              <div class="shopping-cart-content">
                <div class="shopping-cart-top">
                  <h4>Your Cart 購物車</h4>
                  <a class="cart-close" href="#"><i class="la la-close"></i></a>
                </div>

                <ul>
                  {{!--------------- user account ---------------}}
                  <li class="d-flex justify-content-around">
                    {{#if user}}
                    <div class="mt-2">
                      <h2><i class="la la-user text-warning"></i></h2>
                    </div>
                    <div class="mt-3">
                      <h4><a href="/accounts">會員中心</a></h4>
                    </div>
                    <div class="align-self-center">
                      <a href="/accounts/logout" class="btn btn-outline-danger btn-sm">登出</a>
                    </div>
                    {{else}}
                    <div class="mt-2">
                      <h2><i class="la la-user"></i></h2>
                    </div>
                    <div class="mt-3">
                      <h4><a href="/accounts/signin">SIGN IN 登入</a></h4>
                    </div>
                    <div></div>
                    {{/if}}
                  </li>
                  {{#ifCond user.role "admin"}}
                  <li class="d-flex justify-content-around">
                    <div class="mt-2">
                      <h2><i class="la la-gears"></i></h2>
                    </div>
                    <div class="mt-3">
                      <h4><a href="/admin/users">管理員</a></h4>
                    </div>
                    <div></div>
                  </li>
                  {{/ifCond}}
                  {{!----------------- cart item ---------------------}}
                  <hr />
                  {{#if barCart.items}}
                  {{#each barCart.items}}
                  <form action="/carts/{{this.CartItem.id}}/delete" method="post" id="delete-item"></form>
                  <li class="single-shopping-cart">
                    <div class="shopping-cart-img">
                      <a href="/products/{{this.id}}"><img alt="" src="{{this.image}}"></a>
                      <div class="item-close">
                        <a href="#"><i class="sli sli-close"></i></a>
                      </div>
                    </div>
                    <div class="shopping-cart-title">
                      <h4><a href="#">{{this.name}}</a></h4>
                      <span>$ {{this.price}}</span>
                    </div>
                    <div class="shopping-cart-delete">
                      <button type="submit" form="delete-item"><i class="la la-trash"></i></button>
                    </div>
                  </li>
                  {{/each}}
                </ul>
                <div class="shopping-cart-bottom">
                  <div class="shopping-cart-total">
                    <h4>金額 <span class="shop-total">$ {{barTotalPrice}}</span></h4>
                  </div>
                  <div class="shopping-cart-btn btn-hover default-btn text-center">
                    <a class="black-color" href="/carts">前往購物清單</a>
                  </div>
                </div>
                {{/if}}
                </div>
              </div>
            <div class="mobile-off-canvas">
              <a class="mobile-aside-button" href="#"><i class="la la-navicon la-2x"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

