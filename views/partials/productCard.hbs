{{!---------------------- All Products --------------------------}}

            {{!---------------------- Product Card--------------------------}}
            {{#each products}}
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                <div class="product-wrap mb-35">
                    <div class="product-img mb-15">
                        <a href="/products/{{this.id}}"><img src="{{this.image}}" alt="product"></a>
                        <div class="product-action">
                            {{!-- <a data-toggle="modal" data-target="#exampleModal" title="Quick View" href="#"><i class="la la-plus"></i></a>
                            {{#if this.isLiked}}
                                <form action="/products/{{this.id}}/unlike?_method=DELETE" method="POST">
                                    <button title="Wishlist" type="submit" class="btn btn-danger"><i class="la la-heart-o"></i></button>
                                </form>
                            {{else}}
                                <form action="/products/{{this.id}}/like?_method=DELETE" method="POST">
                                    <button title="Wishlist" type="submit" class="btn btn-danger"><i class="la la-heart-o"></i></button>
                                </form>
                            {{/if}}
                             <a title="Compare" href="#"><i class="la la-retweet"></i></a> --}}
                        </div>
                    </div>

                    <div class="product-content">
                        <span>{{this.Category.name}}</span>
                        <h4><a href="/products/{{this.id}}">{{this.name}}</a></h4>
                        <div class="price-addtocart">
                            <div class="product-price">
                                <span>$ {{this.price}}</span>
                            </div>
                            
                             
                           
                            <form>
                                <div class="product-addtocart">
                                    <button type="submit">+ 新增至購物車</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
           
      

{{!---------------- Modal ------------------------}}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-5 col-sm-12 col-xs-12">
                        <div class="tab-content quickview-big-img">
                            <div id="pro-1" class="tab-pane fade show active">
                                <img src="{{this.image}}" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-12 col-xs-12">
                        <div class="product-details-content quickview-content">
                            <span>{{this.Category.name}}</span>
                            <h2>{{this.name}}</h2>
                            <div class="product-ratting-review">
                                <div class="product-review">
                                    <span>40+ Reviews</span>
                                </div>
                            </div>
                            <div class="pro-details-size">
                                <span>Weight: {{this.weight}} kg</span>
                            </div>
                            <div class="pro-details-size">
                                <span>Size: {{this.length}} cm x {{this.width}} cm x {{this.height}} cm</span>
                            </div>
                            <div class="pro-details-price-wrap">
                                <div class="product-price">
                                    <span>$ {{this.price}}</span>
                                    <span class="old">$ {{this.recommendedPrice}}</span>
                                </div>
                                <div class="dec-rang"><span>- 30%</span></div>
                            </div>
                            {{!-- Send to Cart --}}
                           
                                <div class="pro-details-quality">
                                    <div class="cart-plus-minus form-group">
                                        <input class="cart-plus-minus-box form-control" type="text" name="quantity" value="1">
                                    </div>
                                </div>
                                <div class="pro-details-compare-wishlist">
                                    <div class="pro-details-compare">
                                        <a title="Add To Compare" href="#"><i class="la la-retweet"></i> Compare</a>
                                    </div>
                                    {{!-- like --}}
                                    <div class="pro-details-wishlist">
                                        <a title="Add To Wishlist" href="/products/{{this.id}}/unlike"><i class="la la-heart"></i> Delete from wish list</a>
                                    </div>
                                    <div class="pro-details-wishlist">
                                        <a title="Add To Wishlist" href="/products/{{this.id}}/like"><i class="la la-heart-o"></i> Add to wish list</a>
                                    </div>
                                </div>
                             <form  action="/carts" method="POST"></form>
                                <div class="pro-details-buy-now btn-hover btn-hover-radious">
                                    <button type="submit">Add To Cart</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{!----------------------------------  Modal end -----------------------------------}}
{{/each}}