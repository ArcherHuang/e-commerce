 <div class="main-wrapper">
        {{> navBar}}
        {{> shop/breadcrumb}}
        <div class="shop-area pt-90 pb-90">
            <div class="container">
                <div class="row flex-row-reverse">
                    <div class="col-lg-9">
                        {{> shop/topBar}}
                        <div class="shop-bottom-area">
                            <div class="tab-content jump">
                                <div id="shop-1" class="tab-pane active">
                                    <div class="row">
                                       {{> productCard items=products }}
                                    </div>
                                </div>
                                {{> shop/pagination}}
                            </div>
                        </div>
                    </div>
                    {{!-- sidebar --}}
                    <div class="col-lg-3">
                        <div class="sidebar-wrapper">

                            {{> shop/searchWidget}}
                            {{> shop/categoryFilterWidget categories=categories }}
                            {{> shop/priceFilterWidget}}

                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{> footer}}
    </div>